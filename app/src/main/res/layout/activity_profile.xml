<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:background="@color/colorWhite"
    tools:context="com.vermilionsynergy.magadiskileton.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/arrowleft"
                    android:background="@color/colorWhite"
                    android:id="@+id/goBackButton"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentLeft="true"
                    android:onClick="clickBack"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/useravatarprofile"
                    android:id="@+id/UserAvatar"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="2" />

                <com.vermilionsynergy.magadiskileton.MagadiTextView
                    android:text="User Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorMainBg"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:textAllCaps="true"
                    android:id="@+id/textView3"
                    android:layout_weight="3" />
            </LinearLayout>
            <com.vermilionsynergy.magadiskileton.MagadiTextView
                android:text="+97140000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="40dp"
                android:textAllCaps="true"
                android:id="@+id/tvPhone"
                android:layout_weight="2" />
            <com.vermilionsynergy.magadiskileton.MagadiTextView
                android:text="mail@mail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:textAllCaps="false"
                android:id="@+id/tvMail"
                android:layout_weight="3" />

            <com.vermilionsynergy.magadiskileton.MagadiButton
                android:text="ADD OR EDIT DETAILS"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="20dp"
                android:id="@+id/button2"
                android:background="@color/colorGreenButtonBg"
                android:layout_weight="4" />
            <com.vermilionsynergy.magadiskileton.MagadiTextView
                android:text="Addresses:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="102dp"
                android:textAllCaps="false"
                android:id="@+id/tvAdresses"
                android:layout_weight="5" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="wrap_content">
                <com.vermilionsynergy.magadiskileton.MagadiTextView
                    android:text="FIRST ADDRESS LINE\nSECOND ADDRESS LINE\n1234567"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorMainBg"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:id="@+id/tvAdresses1"
                    android:padding="7dp"
                    android:layout_weight="5" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/edit"
                    android:background="@color/colorGreenButtonBg"
                    android:id="@+id/EditButton"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="2" />

            </LinearLayout>
            <com.vermilionsynergy.magadiskileton.MagadiButton
                android:text="ADD NEW ADDERESS"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/button4"
                android:layout_marginTop="20dp"
                android:background="@color/colorGreenButtonBg"
                android:layout_weight="7" />
            <com.vermilionsynergy.magadiskileton.MagadiTextView
                android:text="Order history:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:id="@+id/tvOrderHistory"
                android:layout_weight="8" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/item"
                    android:id="@+id/imageView4"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="7dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="2">
                    <com.vermilionsynergy.magadiskileton.MagadiTextView
                        android:text="Agromonte Cherry Tomatoes Pureed\nby Canned Food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/colorBlack"
                        android:layout_centerHorizontal="true"
                        android:textSize="9dp"
                        android:textAllCaps="false"
                        android:id="@+id/tvhistory1ds"
                        android:layout_weight="1" />
                    <com.vermilionsynergy.magadiskileton.MagadiTextView
                        android:text="AED 6.55"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/colorBlack"
                        android:layout_centerHorizontal="true"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:id="@+id/tvhistory1cost"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_weight="2" />
                </LinearLayout>
            </LinearLayout>
            <com.vermilionsynergy.magadiskileton.MagadiButton
                android:text="SEE MORE"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="20dp"
                android:id="@+id/button3"
                android:background="@color/colorGreenButtonBg"
                android:textColor="@color/colorPrimary"
                android:layout_weight="10" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
